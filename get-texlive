#!/bin/bash

red='\e[31m'
green='\e[32m'
yellow='\e[33m'
igreen='\033[42;30;1m'
iyellow='\033[43;30:1m'
normal='\e[0m'

function heading {
    local msg=" $1 "
    if [ -n "$2" ]; then
        local mode="$2"
    else
        local mode=0
    fi
    # shellcheck disable=SC2155
    local max=$(tput cols)
    local center=${#msg}
    local left=$(((max - center) / 2))
    [ $left -lt 0 ] && left=0
    local right=$((left + center))

    case $mode in
        0)
            # shellcheck disable=SC2155
            local rule="$(printf '%.0s=' $(seq "$max"))"
            echo -e "\n$yellow${rule::left}$msg${rule:right}$normal"
            ;;
        1)
            # shellcheck disable=SC2155
            local rule="$(printf '%.0s ' $(seq "$max"))"
            echo -e "\n$igreen${rule::left}$msg${rule:right}$normal"
            ;;
        2)
            # shellcheck disable=SC2155
            local rule="$(printf '%.0s ' $(seq "$max"))"
            echo -e "\n$iyellow${rule::left}$msg${rule:right}$normal"
            ;;
    esac
    sleep 3
}

function error_handler {
    echo -e "${red}An error occured during the installation process!${normal}"
    echo -e "${red}(Line $1) Command: $2 ${normal}"
    read -r -p 'For more details, see the error log above. Press Enter to exit... '
    exit 1
}

if [ "$EUID" -ne 0 ]; then
    echo -e "${red}Root privileges required!${normal}"
    sudo "$(realpath "$0")" || exit 1
else
    clear
    heading 'Warning!' 2
    fold -sw "$(( $(tput cols) - 10 ))" << EOF | sed "s/^/     /g"

Welcome to the TeX Live installation wizard! 
This script will remove any previously installed distribution of TeX \
Live installed, in order to install the most recent one.

EOF
    read -r -p 'Press Enter to continue, otherwise hit Ctrl-C... '

    trap 'error_handler $LINENO $BASH_COMMAND' ERR

    heading 'Deleting older versions of TeX Live'
    find /usr/local/texlive -maxdepth 1 -type d -name '[0-9]+' -print -exec rm -rf {} +
    find "/home/$SUDO_USER" -maxdepth 1 -type d -name '.texlive[0-9]+' -print -exec rm -rf {} +
    echo -e "${green}Done!${normal}"

    heading 'Installing requirements'
    apt install -y perl-tk perl-doc wget
    echo -e "${green}Done!${normal}"

    heading 'Downloading and extracting the installer'
    # shellcheck disable=SC2164
    cd "$(mktemp -d)"
    wget -nv --show-progress 'http://mirror.ctan.org/systems/texlive/tlnet/install-tl-unx.tar.gz' -O install-tl-unx.tar.gz
    tar -xvf install-tl-unx.tar.gz
    cat << 'EOF' > texlive.profile
selected_scheme scheme-full
instopt_adjustpath 0
instopt_adjustrepo 1
instopt_letter 0
instopt_portable 0
instopt_write18_restricted 1
tlpdbopt_autobackup 1
tlpdbopt_backupdir tlpkg/backups
tlpdbopt_create_formats 1
tlpdbopt_desktop_integration 1
tlpdbopt_file_assocs 1
tlpdbopt_generate_updmap 0
tlpdbopt_install_docfiles 1
tlpdbopt_install_srcfiles 1
tlpdbopt_post_code 1
tlpdbopt_sys_bin /usr/local/bin
tlpdbopt_sys_info /usr/local/share/info
tlpdbopt_sys_man /usr/local/share/man
tlpdbopt_w32_multi_user 1
EOF
    heading 'Starting the installer'
    "$(find ./ -type f -name 'install-tl' | head -1)" --profile texlive.profile --no-interaction
    echo -e "${green}Done!${normal}"

    heading 'Creating symlink to the bin directory'
    mkdir -vp /opt
    ln -sfv "$(find /usr/local/texlive -maxdepth 1 -type d -name '[0-9]+')/bin/$(uname -p)-linux" /opt/texbin
    echo -e "${green}Done!${normal}"

    heading 'Installing fonts'
    cp -v "$(/opt/texbin/kpsewhich -var-value TEXMFSYSVAR)/fonts/conf/texlive-fontconfig.conf" /etc/fonts/conf.d/09-texlive.conf
    fc-cache -fsv
    echo -e "${green}Done!${normal}"

    heading 'Configuring the environment'
    # shellcheck disable=SC2016
    [ ! -f /etc/profile.d/texlive.sh ] && echo 'export PATH=/opt/texbin:${PATH}' > /etc/profile.d/texlive.sh
    alias mktexlsr > /dev/null 2>&1 || echo "alias mktexlsr='sudo /opt/texbin/mktexlsr'" >> "/home/$SUDO_USER/.bash_aliases"
    alias updmap-sys > /dev/null 2>&1 || echo "alias updmap-sys='sudo /opt/texbin/updmap-sys'" >> "/home/$SUDO_USER/.bash_aliases"
    alias fmtutil-sys > /dev/null 2>&1 || echo "alias fmtutil-sys='sudo /opt/texbin/fmtutil-sys'" >> "/home/$SUDO_USER/.bash_aliases"
    alias sutlmgr > /dev/null 2>&1 || echo "alias sutlmgr='sudo /opt/texbin/tlmgr -gui'" >> "/home/$SUDO_USER/.bash_aliases"
    echo -e "${green}Done!${normal}"

    heading 'Cleaning up'
    apt autopurge -y perl-doc
    echo -e "${green}Done!${normal}"

    clear
    heading 'Installation completed' 1
    fold -sw "$(( $(tput cols) - 10 ))" << EOF | sed "s/^/     /g"

Run 'sutlmgr' to execute the TeX Live manager, a useful tool to keep \
the packages of the installed distribution up-to-date. If it crashes \
on update, probably you need to update the tool itself by running \
'sutlmgr update --self'. Other useful aliases: mktexlsr, updmap-sys, \
fmtutil-sys. To complete the installation, please logout.

EOF
    read -r -p 'Press Enter to logout or Ctrl-C to do it later... '
    loginctl terminate-user "$SUDO_USER"
fi
